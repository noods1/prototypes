{
  "name": "prototypes",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/launcher",
    "dev:launcher": "npm run dev --workspace=apps/launcher",
    "dev:adpreview": "npm run dev --workspace=apps/adpreview-multishow",
    "dev:catalog": "npm run dev --workspace=apps/catalog-creation-proto",
    "dev:react-tailwind": "npm run dev --workspace=apps/react-tailwind-app",
    "dev:all": "npm-run-all --parallel dev:launcher dev:adpreview dev:catalog dev:react-tailwind",
    "build": "npm run build --workspaces",
    "build:launcher": "npm run build --workspace=apps/launcher",
    "build:adpreview": "npm run build --workspace=apps/adpreview-multishow",
    "build:catalog": "npm run build --workspace=apps/catalog-creation-proto",
    "build:react-tailwind": "npm run build --workspace=apps/react-tailwind-app",
    "install:all": "npm install",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
